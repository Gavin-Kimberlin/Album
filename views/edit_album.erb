<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text" value="<%= @album.name %>">
  <label for="artist">Rename artist</label>
  <input id="artist" name="artist" type="text" value="<%= @album.artist %>">
  <label for="genre">Rename genre</label>
  <input id="genre" name="genre" type="text" value="<%= @album.genre %>">

  <button type="submit">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>
